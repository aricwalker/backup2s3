SETUP:

  # First step
  gem install backup2s3

  
  # In config/environment.rb
  config.gem "backup2s3", :version => ">= 0.1.0"


  # In your application root directory
  script/generate backup2s3


  # Change your settings in config/backup2s3.yml
  application:
    max_number_of_backups: 5
    backup_database: true
    backup_application:
      - public    
  adapter:
    access_key_id: XXXXXXXXXXXXXXXXXXXX
    secret_access_key: XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

  
  # DB credentials are read from your database.yml file
  rake gems:install


USAGE:

  # Backup tasks
  rake backup2s3:backup:create
  rake backup2s3:backup:delete
  rake backup2s3:backup:list
  rake backup2s3:backup:restore

  # Handy tasks
  rake backup2s3:statistics      # Shows you the size of your DB